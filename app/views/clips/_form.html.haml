= form_for @clip do |f|
  - if @clip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@clip.errors.count, "error")} prohibited this clip from being saved:"
      %ul
        - @clip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :url, :placeholder => "dataclips URL"
  .actions
    = f.submit 'Save', :class => "btn btn-success"
