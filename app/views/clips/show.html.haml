= javascript_include_tag "http://code.highcharts.com/highcharts.js"

%p#notice= notice

%p
  %b Url:
  = link_to @clip.url, @clip.url

= link_to 'Edit', edit_clip_path(@clip)
\|
= link_to 'Back', clips_path

#chart

:javascript
  $(function() {
    new Highcharts.Chart({
      chart: { renderTo: 'chart', type: 'column' },
      title: { text: '#{@clip.name}' },
      xAxis: { categories: #{@clip.labels}, title: { text: '#{@clip.fields[0]}' } },
      yAxis: { title: { text: '#{@clip.fields[1] }' } },
      series: [{
        data: #{@clip.series}
      }]
    });
  })
